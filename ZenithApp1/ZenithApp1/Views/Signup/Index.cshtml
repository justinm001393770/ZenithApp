@using ZenithApp1.ViewModels
@model SignUpViewModel

@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_LayoutLoggedOut.cshtml";
}

<div class="form-container">
    <div class="signup-container">
        <div class="form-text-header">SIGN UP</div>

        <div id="loginForm" class="signup-box">
            @using (Html.BeginForm("Index", "SignUp", FormMethod.Post, new { @class = "form-signup", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "text-sm" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Username, new { @class = "text-box-1" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "validation-text" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "text-sm" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "text-box-1" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "text-sm" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "text-box-1" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-text" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmEmail, new { @class = "text-sm" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ConfirmEmail, new { @class = "text-box-1" })
                        @Html.ValidationMessageFor(m => m.ConfirmEmail, "", new { @class = "validation-text" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "text-sm" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "text-box-1" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-text" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "text-sm" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-box-1" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "validation-text" })
                    </div>
                </div>
                <div class="button-tray-form">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Continue" class="btn-zenith blue" />
                    </div>
                </div>
                <div class="button-tray-form">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Cancel" class="btn-zenith red" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
                    </div>
                </div>
                <div class="tagline">
                    <span class="tagline-text">Already have an account? </span><span class="tagline-link" onclick="@("window.location.href='" + @Url.Action("Index", "Login") + "'");">Click here</span>
                </div>
            }
        </div>
    </div>
</div>